<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blogs</title>
    <%- include('./partials/Userstyle.ejs')  %>
</head>
<body>
    <%- include('./partials/topBar.ejs')  %>
<button class="add_blog_btn"><a href="/blog/addblog">+Add Blogs</a></button>

<div class="blogs">
    <% if (blogs && blogs.length > 0) { %>
      <% blogs.forEach(blog => { %>
        <div class="blog">
          <h2><%= blog.title %></h2>
          <p><%= blog.content %></p>
          <small>Author: <%= blog.author %></small>
          <div class="blog_actions">
            <form action="/blog/deleteblog/<%= blog._id %>" method="post" style="display:inline;">
              <button type="submit">Delete</button>
            </form>
            <a href="/blog/editblog/<%= blog._id %>"><button>Edit</button></a>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <p>There are no blogs.</p>
    <% } %>
  </div>
    
</body>
</html>